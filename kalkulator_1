<!DOCTYPE html>
<html>
  <head>
    <title>Kalkulator</title>
    <script>
      function tambah() {
        let angka1 = parseInt(document.getElementById("angka1").value);
        let angka2 = parseInt(document.getElementById("angka2").value);
        let hasil = angka1 + angka2;
        document.getElementById("hasil").value = hasil;
      }

      function kurang() {
        let angka1 = parseInt(document.getElementById("angka1").value);
        let angka2 = parseInt(document.getElementById("angka2").value);
        let hasil = angka1 - angka2;
        document.getElementById("hasil").value = hasil;
      }

      function kali() {
        let angka1 = parseInt(document.getElementById("angka1").value);
        let angka2 = parseInt(document.getElementById("angka2").value);
        let hasil = angka1 * angka2;
        document.getElementById("hasil").value = hasil;
      }

      function bagi() {
        let angka1 = parseInt(document.getElementById("angka1").value);
        let angka2 = parseInt(document.getElementById("angka2").value);
        let hasil = angka1 / angka2;
        document.getElementById("hasil").value = hasil;
      }
    </script>
  </head>
  <body>
    <h1>Kalkulator</h1>
    <form>
      <label for="angka1"></label>
      <input type="number" id="angka1">

      <label for="angka2"></label>
      <input type="number" id="angka2"><br><br>

      <button type="button" onclick="tambah()">+</button>
      <button type="button" onclick="kurang()">-</button>
      <button type="button" onclick="kali()">*</button>
      <button type="button" onclick="bagi()">/</button><br><br>

      <label for="hasil"></label>
      <input type="text" id="hasil" disabled>
    </form>
  </body>
</html>
